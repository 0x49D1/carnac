<Window x:Class="Carnac.Views.KeyShowView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="KeyShowView" Height="300" Width="300"
        Background="Black"
        Opacity="0.5"
        AllowsTransparency="True"
        WindowStyle="None"
        Focusable="False"
        Topmost="True">
    <ListView x:Name="Keys" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
              Background="Transparent" Focusable="False" IsHitTestVisible="False">
        <ListView.ItemTemplate>
            <DataTemplate>
                <TextBlock HorizontalAlignment="Stretch" Foreground="White" Background="Transparent" Text="{Binding}"
                           Focusable="False" IsHitTestVisible="False" />
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
</Window>
